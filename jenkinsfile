pipeline {
  agent any

  stages {
    stage('Clone') {
      steps {
        git branch: 'main', url: 'https://github.com/mina-dvr/flask-app'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t flask-app .'
      }
    }

    stage('Run Container') {
      steps {
        sh 'docker compose up -d'
      }
    }
  }
}
